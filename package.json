{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:student": "turbo build --filter=@medprep/students",
    "build:teacher": "turbo build --filter=@medprep/teachers",
    "dev": "turbo dev",
    "dev:student": "turbo dev --filter=@medprep/students",
    "dev:teacher": "turbo dev --filter=@medprep/teachers",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "@medprep/typescript-config": "*",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
